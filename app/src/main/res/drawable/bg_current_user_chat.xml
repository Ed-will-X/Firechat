<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">

            <solid android:color="?attr/colorPrimary"/>
            <corners
                android:topLeftRadius="@dimen/chat_bubble_corner"
                android:bottomLeftRadius="@dimen/chat_bubble_corner"
                android:topRightRadius="@dimen/chat_bubble_corner"
                />

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <solid android:color="?chat_sent_pressed"/>
            <corners
                android:topLeftRadius="@dimen/chat_bubble_corner"
                android:bottomLeftRadius="@dimen/chat_bubble_corner"
                android:topRightRadius="@dimen/chat_bubble_corner"
                />

        </shape>
    </item>
</selector>