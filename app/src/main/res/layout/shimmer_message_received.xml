<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_gravity="top"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bg_loading_shimmer_background_circle"
        />

    <View
        android:visibility="gone"
        android:id="@+id/empty_padding"
        android:layout_gravity="top"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="left"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/bg_loading_shimmer_message_received"
            />

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/bg_loading_shimmer_message_received_second"
            />

        <View
            android:layout_marginTop="3dp"
            android:layout_width="@dimen/shimmer_long_width_3"
            android:layout_height="@dimen/shimmer_long_height"
            android:background="@drawable/bg_loading_shimmer_background_long"
            />
    </LinearLayout>
</LinearLayout>

