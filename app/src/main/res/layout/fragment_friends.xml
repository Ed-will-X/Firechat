<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/cream"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.signedIn.fragments.viewPager.FriendsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/friends_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <LinearLayout
    android:visibility="gone"
    android:id="@+id/no_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            />

        <LinearLayout
            android:id="@+id/add_friends_clickable"
            android:clickable="true"
            android:layout_marginHorizontal="100dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="70dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_friends"
                android:textSize="@dimen/no_chat_header"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_friends_body"
                android:textSize="@dimen/no_chat_body"
                android:textColor="@color/grey"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_friends"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/ios_blue"
                />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/shimmer_friends"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>
        <include layout="@layout/shimmer_friends"/>

    </LinearLayout>

</LinearLayout>