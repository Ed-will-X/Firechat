<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".view.signedIn.fragments.ProfileImageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/back_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_back_android"
            />

        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class Group Chat"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/center_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Â· "
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5h"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balls Gulls"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/more_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_more_vert"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/a_e_f_v_d_f_g_d"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />


</LinearLayout>