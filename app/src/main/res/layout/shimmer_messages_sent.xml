<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_marginTop="1dp"
            android:layout_gravity="right"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_loading_shimmer_message_sent"
            />

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_loading_shimmer_message_sent_second"
            />

        <View
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="end"
            android:layout_width="@dimen/shimmer_long_width_3"
            android:layout_height="@dimen/shimmer_long_height"
            android:background="@drawable/bg_loading_shimmer_background_long"
            />

    </LinearLayout>
</LinearLayout>