<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Firechat" parent="Theme.MaterialComponents.DayNight.NoActionBar">

<!--        TODO: Remove when about to implement dark theme-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Actionsheet</item>


        <!-- Background-->
        <item name="backgroundColor">@color/white</item>
        <item name="user_card_background_profile_fragment">@color/white</item>
        <item name="user_card_background_profile_fragment_bottom">@color/white_grey</item>
        <item name="background_profile_fragment">@color/cream</item>

        <item name="background_chats_fragment">@color/white</item>


        <!-- Horizontal rule color-->
        <item name="horizontal_rule_color">@color/light_grey_3</item>

        <!-- Shimmer color-->
        <item name="shimmer_color_main">@color/transparent_grey_2</item>
        <item name="shimmer_end_color">@color/light_grey</item>

        <!-- Text color-->
        <item name="chat_title_text_color">@color/black</item>
        <item name="chat_subtitle_text_color">@color/grey</item>
        <item name="icon_color">@color/light_grey_2</item>
        <item name="subtitle_text_color">@color/transparent_grey</item>
        <item name="grey_white_text">@color/grey</item>

        <!-- Text Box-->
        <item name="text_box_color">@color/light_grey_5</item>

        <item name="received_background_color">@color/white_blue</item>
        <item name="message_action_bar">@color/light_grey_4</item>


        <item name="ios_text_button_color">@color/ios_blue</item>
        <item name="chat_sent_pressed">@color/teal_700</item>
        <item name="chat_received_pressed">@color/transparent_grey</item>

        <item name="group_card">@color/white</item>
        <item name="background_group_fragment">@color/cream</item>

        <item name="friend_page_sub_header">@color/cream_2</item>
        <item name="friend_page_background">@color/white</item>


        <item name="dialog_background">@color/white</item>
        <item name="dialog_edit_text">@color/light_grey</item>
        <item name="dialog_handlebar">@color/grey</item>
        <item name="dialog_input_text_color">@color/grey</item>
        <item name="sort_popover">@color/white</item>




    </style>
</resources>