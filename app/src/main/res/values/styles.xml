<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="auth_root_large_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="auth_root_small_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="auth_root_sign_in_btn" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="auth_root_sign_up_btn" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="auth_root_signin_large_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="actionsheet_signin_btn" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Actionsheet" parent="@style/Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>

        <!-- App Theme. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/actionsheet_round_corner</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
        <item name="background">"@drawable/edit_text_shape"</item>
    </style>

    <style name="appbar_large_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="appbar" parent="Widget.Material3.AppBarLayout">
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:background">@color/light_blue</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/transparent_white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/tab_text</item>
    </style>

    <style name="tab_text" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="search_bar" parent="TextAppearance.AppCompat">

    </style>

    <style name="other_profile_header_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="other_profile_body_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="other_profile_button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/</item>
    </style>

    <style name="action_sheet_handlebar" parent="Widget.AppCompat.ListView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/actionsheet_handlebar</item>
    </style>

    <style name="horizontal_rule" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?horizontal_rule_color</item>
    </style>

    <style name="equal_space_horizontal" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="equal_space_vertical" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>


<!--    Message Bubble Rounded Corners-->
    <style name="rounded_corners_sent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeTopRight">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeBottomLeft">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="rounded_corners_sent_second" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="rounded_corners_received" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/chat_bubble_corner</item>
    </style>

    <style name="rounded_corners_received_second" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeBottomLeft">@dimen/chat_bubble_corner</item>
        <item name="cornerSizeBottomRight">@dimen/chat_bubble_corner</item>
    </style>

    <style name="rounded_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="actionsheet_message_item_parent" parent="">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/item_padding_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/item_padding_horizontal</item>
    </style>

    <style name="actionsheet_message_item_icon">
        <item name="android:layout_width">@dimen/item_icon_size</item>
        <item name="android:layout_height">@dimen/item_icon_size</item>
        <item name="tint">?chat_subtitle_text_color</item>
    </style>

    <style name="actionsheet_message_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?chat_subtitle_text_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>

    <style name="message_detail_item_parent">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="message_detail_item_key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="message_detail_item_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="message_detail_image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="setting_header_title_text">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/setting_head_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="setting_header_title_icon">
        <item name="android:layout_width">@dimen/setting_head_icon_size</item>
        <item name="android:layout_height">@dimen/setting_head_icon_size</item>
        <item name="tint">?colorOnSecondary</item>
    </style>

    <style name="setting_page_switch">
        <item name="android:paddingVertical">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/setting_item_padding_horizontal</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?subtitle_text_color</item>
    </style>

    <style name="settings_page_navigable_parent">
        <item name="android:paddingHorizontal">@dimen/setting_item_padding_horizontal</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_page_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?subtitle_text_color</item>
    </style>

    <style name="auth_root_edit_text">
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColorHint">?attr/dialog_input_text_color</item>
    </style>
</resources>