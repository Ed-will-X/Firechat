<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="auth_root_large_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="auth_root_small_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="auth_root_sign_in_btn" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="auth_root_sign_up_btn" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="auth_root_signin_large_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="actionsheet_signin_btn" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Actionsheet" parent="@style/Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>

        <!-- App Theme. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/actionsheet_round_corner</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
        <item name="background">"@drawable/edit_text_shape"</item>
    </style>

    <style name="appbar_large_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="appbar" parent="Widget.Material3.AppBarLayout">
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:background">@color/light_blue</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/transparent_white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/tab_text</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="tab_text" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="search_bar" parent="TextAppearance.AppCompat">

    </style>

    <style name="other_profile_header_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="other_profile_body_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="other_profile_button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/</item>
    </style>

    <style name="action_sheet_handlebar" parent="Widget.AppCompat.ListView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/actionsheet_handlebar</item>
    </style>

</resources>